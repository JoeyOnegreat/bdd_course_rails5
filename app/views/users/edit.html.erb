<h3 class='text-center'>Editing User</h3>
<div class='row'>
<div class='col-md-12'>
<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
<% if @user.errors.any? %>
<div class="panel panel-danger col-md-offset-1">
<div class="panel-heading"> 
<h2 class="panel-title">
<%= pluralize(@user.errors.count, "error") %>
prohibited this user from being saved: </h2>
<div class="panel-body"> 
<ul>
<% @user.errors.full_messages.each do |msg| %> 
<li>
<%= msg %> 
</li>
<% end %> 
</ul>
</div> 
</div>
</div> 
<% end %>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :first %> 
</div>
<div class='col-md-11'>
<%= f.text_field :first, class: 'form-control', placeholder: 'First Name', autofocus: true %> 
</div>
</div>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :last %> 
</div>
<div class='col-md-11'>
<%= f.text_field :last, class: 'form-control', placeholder: 'Last Name', autofocus: true %> 
</div>
</div>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :email %> 
</div>
<div class='col-md-11'>
<%= f.text_field :email, class: 'form-control', placeholder: 'email', autofocus: true %> 
</div>
</div>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :phone %> 
</div>
<div class='col-md-11'>
<%= f.text_field :phone, class: 'form-control', placeholder: 'Phone Number', autofocus: true %> 
</div>
</div>
<div class='form-group'>
<div class='col-md-offset-1 col-md-11'>
<%= f.submit class: 'btn btn-primary btn-lg pull-right' %> 
</div>
</div> 
<% end %>
</div> 
</div>