<h3 class='text-center'>Creating New Application</h3>
<div class='row'>
<div class='col-md-12'>
<%= form_for(@customer, :html => {class: "form-horizontal", role: "form"}) do |f| %>
<% if @customer.errors.any? %>
<div class="panel panel-danger col-md-offset-1">
<div class="panel-heading"> 
<h2 class="panel-title">
<%= pluralize(@customer.errors.count, "error") %>
prohibited this Application from being saved: </h2>
<div class="panel-body"> 
<ul>
<% @customer.errors.full_messages.each do |msg| %> 
<li>
<%= msg %> 
</li>
<% end %> 
</ul>
</div> 
</div>
</div> 
<% end %>
<h4 class='text-center'> Customer Details</h4>
<div class="text-center " style="display:none"> 
<%= f.select(:status, :Reject => 'false', :Approve => 'true') %>
</div>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :'Customer First Name '%> 
</div>
<div class='col-md-11'>
<%= f.text_field :customerFirstName, class: 'form-control', placeholder: 'Customer first Name', autofocus: true %> 
</div>
</div>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :'customer Last Name' %> 
</div>
<div class='col-md-11'>
<%= f.text_field :customerLastName, class: 'form-control', placeholder: 'Customer last Name', autofocus: true %> 
</div>
</div>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :'customer Email' %> 
</div>
<div class='col-md-11'>
<%= f.text_field :customerEmail, class: 'form-control', placeholder: 'Customer email', autofocus: true %> 
</div>
</div>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :'customer Phone' %> 
</div>
<div class='col-md-11'>
<%= f.text_field :customerPhone, class: 'form-control', placeholder: 'Customer phone Number', autofocus: true %> 
</div>
</div>
<h4 class='text-center'> Business Details</h4>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :'business Name' %> 
</div>
<div class='col-md-11'>
<%= f.text_field :businessName, class: 'form-control', placeholder: 'Business Name', autofocus: true %> 
</div>
</div>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :'business Logo' %> 
</div>
<div class='col-md-11'>
<%= f.file_field :businessLogo, class: 'form-control', autofocus: true %> 
</div>
</div>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :'business Trn' %> 
</div>
<div class='col-md-11'>
<%= f.text_field :businessTrn, class: 'form-control', placeholder: 'Business TRN', autofocus: true %> 
</div>
</div>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :'business Email' %> 
</div>
<div class='col-md-11'>
<%= f.text_field :businessEmail, class: 'form-control', placeholder: 'Business email', autofocus: true %> 
</div>
</div>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :'business Phone' %> 
</div>
<div class='col-md-11'>
<%= f.text_field :businessPhone, class: 'form-control', placeholder: 'Business Phone', autofocus: true %> 
</div>
</div>

<h4 class='text-center'> Business Address</h4>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :'Street' %> 
</div>
<div class='col-md-11'>
<%= f.text_field :street, class: 'form-control', placeholder: 'Street eg 44 main', autofocus: true %> 
</div>
</div>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :'City' %> 
</div>
<div class='col-md-11'>
<%= f.text_field :city, class: 'form-control', placeholder: 'City eg Montego bay', autofocus: true %> 
</div>
</div>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :'State' %> 
</div>
<div class='col-md-11'>
<%= f.text_field :state, class: 'form-control', placeholder: 'State eg st James', autofocus: true %> 
</div>
</div>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :'Zip Code' %> 
</div>
<div class='col-md-11'>
<%= f.text_field :zipcode, class: 'form-control', placeholder: 'Zip code eg 000000', autofocus: true %> 
</div>
</div>
<div class='form-group'>
<div class='control-label col-md-1'>
<%= f.label :'Country' %> 
</div>
<div class='col-md-11'>
<%= f.text_field :country, class: 'form-control', placeholder: 'Country eg Jamaica', autofocus: true %> 
</div>
</div>
<div class='form-group'>
<div class='col-md-offset-1 col-md-11'>
<%= f.submit class: 'btn btn-primary btn-lg pull-right' %> 
</div>
</div> 
<% end %>
</div> 
</div>
